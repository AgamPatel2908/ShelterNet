<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Property Name" name="name" value="<%= properties.Name %>" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Listing Price" name="price" value="<%= properties.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Location</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Location" name="location" value="<%= properties.Location %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Description</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Description" name="description" value="<%= properties.Description %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
